@model AppUserModel
@{
	ViewData["Title"] = "Cập nhật thông tin tài khoản";
}

  <div class="col-md-9">
  	<div class="panel panel-default">
  		<div class="panel-heading">
  			<h3 class="panel-title">
  				<i class="fa fa-user"></i> Cập nhật thông tin tài khoản
  			</h3>
  		</div>
  		<div class="panel-body">
  	<form asp-action="UpdateInfoAccount" asp-controller="Account" method="POST">
  		<input type="hidden" asp-for="Id"/>

  		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

  		<h5><i class="fa fa-info-circle"></i> Thông tin cơ bản</h5>
  		<hr />

  		<div class="form-group">
  			<label><i class="fa fa-user"></i> UserName</label>
  			<input asp-for="UserName" readonly class="form-control" />
  			<span asp-validation-for="UserName" class="text-danger" />
  		</div>
  		<div class="form-group">
  			<label><i class="fa fa-envelope"></i> Email</label>
  			<input asp-for="Email" readonly class="form-control" />
  			<span asp-validation-for="Email" class="text-danger" />
  		</div>
  		<div class="form-group">
  			<label><i class="fa fa-phone"></i> Số điện thoại</label>
  			<input asp-for="PhoneNumber" class="form-control" />
  			<span asp-validation-for="PhoneNumber" class="text-danger" />
  		</div>

  		<h5 style="margin-top: 30px;"><i class="fa fa-heart"></i> Sở thích cá nhân (Tùy chọn - giúp AI gợi ý sản phẩm phù hợp hơn)</h5>
  		<hr />

  		<div class="row">
  			<div class="col-md-6">
  				<div class="form-group">
  					<label>Giới tính</label>
  					<select asp-for="Gender" class="form-control">
  						<option value="">-- Chọn giới tính --</option>
  						<option value="Nam">Nam</option>
  						<option value="Nữ">Nữ</option>
  						<option value="Khác">Khác</option>
  					</select>
  				</div>
  			</div>
  			<div class="col-md-6">
  				<div class="form-group">
  					<label>Ngày sinh</label>
  					<input asp-for="DateOfBirth" type="date" class="form-control" />
  				</div>
  			</div>
  		</div>

  		<div class="row">
  			<div class="col-md-6">
  				<div class="form-group">
  					<label>Phong cách ưa thích</label>
  					<select asp-for="PreferredStyle" class="form-control">
  						<option value="">-- Chọn phong cách --</option>
  						<option value="Sporty">Sporty</option>
  						<option value="Casual">Casual</option>
  						<option value="Formal">Formal</option>
  						<option value="Street">Street</option>
  						<option value="Vintage">Vintage</option>
  						<option value="Minimalist">Minimalist</option>
  					</select>
  				</div>
  			</div>
  			<div class="col-md-6">
  				<div class="form-group">
  					<label>Size thường mặc</label>
  					<select asp-for="SizePreference" class="form-control">
  						<option value="">-- Chọn size --</option>
  						<option value="S">S</option>
  						<option value="M">M</option>
  						<option value="L">L</option>
  						<option value="XL">XL</option>
  						<option value="XXL">XXL</option>
  					</select>
  				</div>
  			</div>
  		</div>

  		<div class="row">
  			<div class="col-md-6">
  				<div class="form-group">
  					<label>Khoảng giá ưa thích</label>
  					<select asp-for="PriceRange" class="form-control">
  						<option value="">-- Chọn khoảng giá --</option>
  						<option value="Budget">Budget (< 500K)</option>
  						<option value="Medium">Medium (500K - 1.5M)</option>
  						<option value="Premium">Premium (> 1.5M)</option>
  					</select>
  				</div>
  			</div>
  			<div class="col-md-6">
  				<div class="form-group">
  					<label>Màu sắc yêu thích</label>
  					<input asp-for="PreferredColors" class="form-control" placeholder="Đỏ, Xanh, Đen" />
  					<small class="form-text text-muted">Phân cách bằng dấu phẩy</small>
  				</div>
  			</div>
  		</div>

  		<div class="form-group">
  			<label>Sở thích</label>
  			<input asp-for="Interests" class="form-control" placeholder="Thể thao, Công sở, Dạo phố" />
  			<small class="form-text text-muted">Phân cách bằng dấu phẩy</small>
  		</div>

  		<div class="form-group">
  			<button type="submit" class="btn btn-primary">
  				<i class="fa fa-save"></i> Cập nhật thông tin
  			</button>
  		</div>
  	</form>
  		</div>
  	</div>

  	<div class="alert alert-info" style="margin-top: 20px;">
  		<i class="fa fa-lightbulb-o"></i>
  		<strong>Mẹo:</strong> Cung cấp đầy đủ thông tin sở thích cá nhân giúp hệ thống AI gợi ý sản phẩm phù hợp hơn với bạn!
  	</div>
  </div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
