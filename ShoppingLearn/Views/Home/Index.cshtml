@model IEnumerable<ProductModel>

<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet">
<style>
    /* 1. Tổng thể */
    body {
        font-family: 'Nunito', sans-serif;
        background-color: #f4f6f9;
    }

    .title {
        color: #fe980f; /* Màu cam chủ đạo hoặc màu thương hiệu */
        background-color: transparent;
        font-weight: 800;
        text-transform: uppercase;
        margin-bottom: 30px;
        position: relative;
    }

    /* 2. Product Card Design */
    .product-image-wrapper {
        border-radius: 15px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        margin-bottom: 30px;
        border: 1px solid #eee;
        height: 100%; /* Đảm bảo các card bằng nhau trong flex/grid */
    }

    .product-image-wrapper:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .single-products {
        position: relative;
    }

    /* 3. Phần hình ảnh */
    .product-img-container {
        height: 260px; /* Chiều cao cố định cho khung ảnh */
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff;
        overflow: hidden;
        padding: 15px;
        position: relative;
    }

    .product-img-container img {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain; /* Đảm bảo ảnh không bị méo */
        transition: transform 0.5s ease;
    }

    .product-image-wrapper:hover .product-img-container img {
        transform: scale(1.1); /* Zoom ảnh khi hover */
    }

    /* 4. Phần thông tin (Info) */
    .productinfo {
        padding: 20px 15px;
        text-align: center;
        background: #fff;
    }

    .product-price {
        font-size: 1.25rem;
        font-weight: 800;
        color: #fe980f;
        margin-bottom: 8px;
        display: block;
    }

    .product-name {
        font-size: 1rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 5px;
        display: -webkit-box;
        -webkit-line-clamp: 2; /* Giới hạn tên 2 dòng */
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 44px; /* Cố định chiều cao tên */
        text-decoration: none;
    }

    .product-meta {
        font-size: 0.85rem;
        color: #888;
        margin-bottom: 5px;
    }

    /* 5. Nút bấm (Buttons) */
    .btn-add-cart {
        background: #fe980f;
        color: #fff;
        border: none;
        border-radius: 25px;
        padding: 8px 20px;
        font-weight: 700;
        margin-top: 10px;
        transition: all 0.3s;
        display: inline-block;
    }

    .btn-add-cart:hover {
        background: #e68a00;
        color: #fff;
        transform: scale(1.05);
        box-shadow: 0 4px 10px rgba(254, 152, 15, 0.4);
    }

    .btn-out-stock {
        background: #e9ecef;
        color: #6c757d;
        border: 1px solid #dee2e6;
        border-radius: 25px;
        padding: 8px 20px;
        cursor: not-allowed;
        margin-top: 10px;
        font-weight: 600;
    }

    /* Link bao quanh thẻ để click được vào chi tiết */
    .product-link {
        text-decoration: none;
        display: block;
    }
</style>

<div class="row">
    <div class="col-sm-3">
        @Html.Partial("_SidebarPartial")
    </div>

    <div class="col-sm-9 padding-right">
        <div class="features_items">
            <h2 class="title text-center">Sản phẩm nổi bật</h2>
            
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-4 col-md-4 mb-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <a asp-action="Details" asp-controller="Product" asp-route-Id="@item.Id" class="product-link">
                                    <div class="product-img-container">
                                        <img src="~/media/products/@item.Image" alt="@item.Name" />
                                    </div>
                                    
                                    <div class="productinfo">
                                        <span class="product-price">@item.Price.ToString("#,##0 VNĐ")</span>
                                        <h4 class="product-name">@item.Name</h4>
                                        <p class="product-meta">
                                            <i class="fa fa-folder-open me-1"></i> @item.Category.Name
                                            | <i class="fa fa-copyright me-1"></i> @item.Brand.Name
                                        </p>
                                    </div>
                                </a>

                                <div class="text-center pb-3">
                                    @if (item.Quantity > 0)
                                    {
                                        <button class="btn btn-default btn-add-cart add-to-cart" data-product_id="@item.Id">
                                            <i class="fa fa-shopping-cart me-1"></i> Thêm giỏ hàng
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-out-stock" disabled>
                                            <i class="fa fa-ban me-1"></i> Hết hàng
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div> </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            $('.add-to-cart').click(function () {
                var Id = $(this).data("product_id");
                
                // Hiệu ứng loading nút bấm (optional)
                var btn = $(this);
                var originalText = btn.html();
                btn.html('<i class="fa fa-spinner fa-spin"></i> Đang thêm...');
                
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Add", "Cart")",
                    data: { Id: Id },
                    success: function (result) {
                        if (result) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công!',
                                text: 'Đã thêm sản phẩm vào giỏ hàng.',
                                showConfirmButton: false,
                                timer: 1500
                            });
                        }
                        // Trả lại nút bấm cũ
                        btn.html(originalText);
                    },
                    error: function() {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi',
                            text: 'Không thể thêm vào giỏ hàng.',
                        });
                        btn.html(originalText);
                    }
                });
            });
        });
    </script>
}