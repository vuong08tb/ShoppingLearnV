@model IEnumerable<CategoryModel>

@{
    ViewData["title"] = "Quản lý danh mục";
    Paginate pager = new Paginate();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    /* 1. Cấu trúc nền và Card */
    body {
        background-color: #f8f9fc;
        color: #5a5c69;
        font-family: 'Segoe UI', sans-serif;
    }

    .category-card {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        padding: 30px;
        margin-top: 20px;
        border: none;
        border-top: 5px solid #4e73df; /* Viền màu xanh điểm nhấn */
    }

    /* 2. Header và Nút thêm mới */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        border-bottom: 2px solid #f1f3f9;
        padding-bottom: 15px;
    }

    .header-title {
        font-weight: 700;
        color: #4e73df;
        font-size: 1.5rem;
        text-transform: uppercase;
        margin: 0;
    }

    .btn-create-category {
        background: linear-gradient(45deg, #4e73df, #224abe);
        color: white;
        border: none;
        border-radius: 30px;
        padding: 10px 25px;
        font-weight: 600;
        box-shadow: 0 4px 10px rgba(78, 115, 223, 0.3);
        text-decoration: none;
        transition: transform 0.2s;
    }

    .btn-create-category:hover {
        transform: translateY(-2px);
        color: white;
        box-shadow: 0 6px 15px rgba(78, 115, 223, 0.4);
    }

    /* 3. Table Styling */
    .table-custom {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

    .table-custom thead th {
        background-color: transparent;
        color: #858796;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.85rem;
        padding: 15px;
        border-bottom: 2px solid #e3e6f0;
    }

    .table-custom tbody tr {
        background-color: #fff;
        box-shadow: 0 2px 6px rgba(0,0,0,0.02);
        transition: transform 0.2s, background-color 0.2s;
        border-radius: 10px;
    }

    .table-custom tbody tr:hover {
        transform: scale(1.01);
        box-shadow: 0 5px 12px rgba(0,0,0,0.08);
        background-color: #fcfcfc;
    }

    .table-custom td {
        padding: 15px;
        vertical-align: middle;
        font-size: 16px;
        border: none; /* Xóa viền mặc định của table bootstrap */
    }

    /* Bo góc cho dòng */
    .table-custom tbody tr td:first-child { border-radius: 10px 0 0 10px; }
    .table-custom tbody tr td:last-child { border-radius: 0 10px 10px 0; }

    /* 4. Badges & Elements */
    .slug-text {
        font-family: 'Courier New', Courier, monospace;
        color: #e74a3b;
        background: #fff5f5;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 16px;
    }

    .badge-status {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 10px;
        font-weight: 700;
    }
    .badge-success-custom { background-color: #e8f5e9; color: #2e7d32; border: 1px solid #c8e6c9; }
    .badge-danger-custom { background-color: #ffebee; color: #c62828; border: 1px solid #ffcdd2; }

    /* Action Buttons */
    .action-group {
        display: flex;
        gap: 8px;
    }
    
    .btn-action {
        width: 35px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        text-decoration: none;
        transition: all 0.2s;
    }
    
    .btn-edit { background-color: #f6c23e; color: #fff; }
    .btn-edit:hover { background-color: #dfa510; color: #fff; }

    .btn-delete { background-color: #e74a3b; color: #fff; }
    .btn-delete:hover { background-color: #be2617; color: #fff; }
</style>

<div class="container-fluid">
    <div class="category-card">
        <div class="page-header">
            <h3 class="header-title"><i class="fas fa-layer-group me-2"></i> Danh sách danh mục</h3>
            <a class="btn-create-category" asp-action="Create" asp-controller="Category">
                <i class="fas fa-plus-circle me-2"></i> Thêm danh mục
            </a>
        </div>

        <div class="table-responsive">
            <table class="table-custom" id="myTable">
                <thead>
                    <tr>
                        <th width="5%" class="text-center">#ID</th>
                        <th width="20%">Tên danh mục</th>
                        <th width="30%">Mô tả</th>
                        <th width="20%">Slug</th>
                        <th width="10%" class="text-center">Trạng thái</th>
                        <th width="15%" class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-bold text-secondary">@item.Id</td>
                            <td class="fw-bold text-primary">@item.Name</td>
                            <td class="text-muted small">@Html.Raw(item.Description)</td>
                            <td><span class="slug-text">@item.Slug</span></td>
                            <td class="text-center">
                                @if (item.Status == 1)
                                {
                                    <span class="badge-status badge-success-custom">
                                        <i class="fas fa-check-circle me-1"></i> Hiển thị
                                    </span>
                                }
                                else
                                {
                                    <span class="badge-status badge-danger-custom">
                                        <i class="fas fa-eye-slash me-1"></i> Ẩn
                                    </span>
                                }
                            </td>
                            <td>
                                <div class="action-group justify-content-center">
                                    <a class="btn-action btn-edit" asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id" title="Sửa">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a class="btn-action btn-delete confirmDeletion" asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <partial name="_paging" model="@pager" />
        </div>
    </div>
</div>