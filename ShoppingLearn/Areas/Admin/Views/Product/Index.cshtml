@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed";
}
<h3> List Products</h3>
<a class="btn btn-primary" asp-action="Create" asp-controller="Product"> Add Product</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Product Quantity</th>
            <th>Product Sold</th>
            <th>Product Description</th>
            <th>Product Price</th>
            <th>Product Image</th>
            <th>Product Slug</th>
            <th>Product Category</th>
            <th>Product Brand</th>
            <th>Product Manage</th>    
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td >@item.Id</td>
                <td>@item.Name</td>
                <td><b>@item.Quantity</b><br /><a asp-controller="Product" asp-action="AddQuantity" asp-route-Id="@item.Id">Add Quantity</a></td>
                <td><b>@item.Sold</b></td>
                <td>@Html.Raw(item.Description)</td>
                <td>@item.Price.ToString("#,##0 VNĐ")</td>
                <td><img src="~/media/products/@item.Image" width="100"></td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }
      
  
    </tbody>
</table>
