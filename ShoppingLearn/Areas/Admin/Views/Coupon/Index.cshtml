@model CouponModel
@{
    ViewData["title"] = " Create Coupon";
}
<h4> Create Coupon</h4>
<div class="col-md-9">

    <form asp-action="Create" autocomplete="off" asp-controller="Coupon" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label> Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger" />
        </div>
        <div class="form-group">
            <label> Discount</label>
            <input asp-for="Discount" class="form-control" type="number" step="0.01" min="1" max="100" />
            <span asp-validation-for="Discount" class="text-danger" />
        </div>
        <div class="form-group">
            <label> Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>
        <div class="form-group">
            <label> DateStart</label>
            <input asp-for="DateStart" class="form-control" />
            <span asp-validation-for="DateStart" class="text-danger" />
        </div>
        <div class="form-group">
            <label> DateExpired </label>
            <input asp-for="DateExpried" class="form-control" />
            <span asp-validation-for="DateExpried" class="text-danger" />
        </div>

        <div class="form-group">
            <label> Status</label>
            <select asp-for="Status" class="form-control">
                <option value="1"> Hiển thị</option>
                <option value="0">Ẩn</option>
            </select>
            <span asp-validation-for="Status" class="text-danger" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary ">Create</button>
        </div>
    </form>

    <h5> List Coupons</h5>
    <table class="table table-striped" id="myTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Date Started</th>
                <th>Date Expired</th>
                <th>Discount</th>
                <th>Active</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coupon in ViewBag.Coupons)
            {
                <tr>
                    <td>@coupon.Name</td>
                    <td>@coupon.Description</td>
                    <td>@coupon.DateStart.ToString("dd-MM-yyyy")</td>
                    <td>@coupon.DateExpried.ToString("dd-MM-yyyy")</td>
                    <td>@coupon.Discount</td>
                    <td>
                        @if (@coupon.Status == 1)
                        {
                            <select name="Status">
                                <option selected value="1">Kích hoạt</option>
                                <option value="0">Ẩn</option>
                            </select>
                        }
                        else
                        {
                            <select name="Status">
                                <option value="1">Kích hoạt</option>
                                <option selected value="0">Ẩn</option>
                            </select>
                        }

                    </td>

                    <td>
                        @if (coupon.DateExpried < DateTime.Now)
                        {
                            <span class="text text-danger">Expired</span>
                        }
                        else
                        {
                            TimeSpan remainingTime = coupon.DateExpried - DateTime.Now;
                            int daysRemaining = remainingTime.Days;
                            @if (daysRemaining == 0)
                            {
                                <span class="text text-danger">Today</span>
                            }
                            else
                            {
                                <span class="text text-success">@daysRemaining days left</span>
                            }

                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
